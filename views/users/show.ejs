<% include ../partials/header %>

<div class="container">
    <div class="row">
        <div class="col-md-4">
            <h1><%=user.firstName +" "+ user.lastName%></h1>
            <div class="thumbnail">
                <img src="<%= user.avatar%>">
                <% if(!user.avatar){ %>
                    <form action="/user/<%= user._id%>" method="POST" enctype="multipart/form-data">
                    <div class="form-group">
                        <label for="image">Avatar:</label>
                        <input class="form-control" id="image" type="file" name="avatar" accept="image/*" required>
                    </div>
                    <div class="form-group">
                        <input class="submit_button" type="submit" value="add">
                    </div>
                </form>
                <% } %>
            </div>
        </div>
        <div class="col-md-8">
            <h1>Username:<%=user.username%></h1>
            <h4>email:<%=user.email%></h4>
            
        </div>
    </div>
</div>

<% include ../partials/footer %>