<% include ../partials/dashboardHeader %>

    <!-- HEADER -->
    <header id="main-header" class="py-2 bg-primary text-white">
      <div class="container">
        <div class="row">
          <div class="col-md-6">
            <h1><i class="fas fa-cog"></i> Dashboard</h1>
          </div>
        </div>
      </div>
    </header>

    <!-- ACTION SECTION -->
    <section id="action" class="py-4 mb-4 bg-light">
      <div class="container">
        <div class="row">
          <div class="col-md-3">
            <a
              href=""
              class="btn btn-primary btn-block"
              data-toggle="modal"
              data-target="#addPostModal"
            >
              <i class="fas fa-plus"></i> Add Post
            </a>
          </div>
          <div class="col-md-3">
            <a
              href=""
              class="btn btn-success btn-block"
              data-toggle="modal"
              data-target="#addCategoryModal"
            >
              <i class="fas fa-plus"></i> Add Category
            </a>
          </div>
          <div class="col-md-3">
            <a
              href=""
              class="btn btn-warning btn-block"
              data-toggle="modal"
              data-target="#addUserModal"
            >
              <i class="fas fa-plus"></i> Add User
            </a>
          </div>
        </div>
      </div>
    </section>

    <!-- POST SECTION -->
    <section id="posts">
      <div class="container">
        <div class="row">
          <div class="col-md-9">
            <div class="card">
              <div class="card-header"><h4>Latest Posts</h4></div>
              <div class="card-body">
                <table class="table table-striped">
                  <thead class="thead-dark">
                    <tr>
                      <th>#</th>
                      <th>Title</th>
                      <th>Category</th>
                      <th>Date</th>
                      <th></th>
                    </tr>
                  </thead>
                  <tbody>
                  
                  <% let i= 1; blogs.forEach(blog => { %>
                    <tr>
                      <td><%= i %></td>
                      <td><%=blog.title%></td>
                      <td><%= blog.category ? blog.category : "no category" %></td>
                      <td>Nov 01 2018</td>
                      <td>
                        <a href="/blogs/<%= blog._id %>" class="btn btn-secondary">
                          <i class="fas fa-angle-double-right"></i> Details</a
                        >
                      </td>
                    </tr>
                  <% i++ }) %>
                  </tbody>
                </table>
              </div>
            </div>
          </div>
          <!-- col-md-9 -->
          <div class="col-md-3">
            <div class="card bg-primary text-center text-white mb-3">
              <div class="card-body">
                <h3>Posts</h3>
                <h4 class="display-4"><i class="fas fa-pencil-alt"></i> <%= (i-1) %></h4>
                <button class="btn btn-outline-light btn-sm">View</button>
              </div>
            </div>
            <div class="card bg-success text-center text-white mb-3">
              <div class="card-body">
                <h3>Categories</h3>
                <h4 class="display-4"><i class="fas fa-folder"></i> 4</h4>
                <button class="btn btn-outline-light btn-sm">View</button>
              </div>
            </div>
            <div class="card bg-warning text-center text-white mb-3">
              <div class="card-body">
                <h3>Users</h3>
                <h4 class="display-4"><i class="fas fa-users"></i> 4</h4>
                <button class="btn btn-outline-light btn-sm">View</button>
              </div>
            </div>
          </div>
          <!-- col-md-3 -->
        </div>
      </div>
    </section>

<% include ../partials/dashboardFooter %>