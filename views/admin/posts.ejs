<% include ../partials/dashboardHeader %>
    <!-- HEADER -->
    <header id="main-header" class="py-2 bg-primary text-white">
      <div class="container">
        <div class="row">
          <div class="col-md-6">
            <h1><i class="fas fa-pencil-alt"></i> Posts</h1>
          </div>
        </div>
      </div>
    </header>

    <!-- SEARCH SECTION -->
    <section id="seacrh" class="py-4 mb-4 bg-light">
      <div class="container">
        <div class="row">
          <div class="col-md-5 ml-auto">
            <div class="input-group">
              <input
                type="text"
                class="form-control"
                placeholder="Search Posts..."
              />
              <div class="input-group-append">
                <button class="btn btn-primary">
                  <i class="fas fa-search"></i>
                </button>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- POST SECTION -->
    <section id="posts">
      <div class="container">
        <div class="row">
          <div class="col">
            <div class="card">
              <div class="card-header"><h4>Latest Posts</h4></div>
              <div class="card-body">
                <table class="table table-striped">
                  <thead class="thead-dark">
                    <tr>
                      <th>#</th>
                      <th>Title</th>
                      <th>Category</th>
                      <th>Date</th>
                      <th></th>
                    </tr>
                  </thead>
                  <tbody>
                    <% let i= 1; blogs.forEach(blog => { %>
                      <tr>
                        <td><%= i %></td>
                        <td><%=blog.title%></td>
                        <td>Web Develpment</td>
                        <td>Nov 01 2018</td>
                        <td>
                          <a href="/blogs/<%= blog._id %>" class="btn btn-secondary">
                            <i class="fas fa-angle-double-right"></i> Details</a
                          >
                        </td>
                      </tr>
                    <% i++ }) %>
                  </tbody>
                </table>
              </div>

              <!-- PAGINATION -->
              <nav class="ml-4">
                <ul class="pagination">
                  <li class="page-item disabled">
                    <a href="" class="page-link">Previous</a>
                  </li>
                  <li class="page-item active">
                    <a href="" class="page-link">1</a>
                  </li>
                  <li class="page-item"><a href="" class="page-link">2</a></li>
                  <li class="page-item"><a href="" class="page-link">3</a></li>
                  <li class="page-item">
                    <a href="" class="page-link">Next</a>
                  </li>
                </ul>
              </nav>
            </div>
            <!-- card -->
          </div>
        </div>
      </div>
    </section>

<% include ../partials/dashboardFooter %>