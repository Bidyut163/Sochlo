<% include ../partials/left-sidebar%>

        
        <div class="content">
          <h1 class="heading-primary mb-sm mt-sm"><%= title %></h1>
          <hr class="mb-sm" />
          <section class="articles_section">
            <% let j=0; blogs.forEach(blog => { %>
              <% if(j < 10) { %>
            <div class="article">
              <div class="article__heading">
                <h1 class="heading-secondary mb-sm">
                  <a href="/blogs/<%= blog.id %>"><%= blog.title %></a>
                </h1>
                <p class="small"><%= blog.category %></p>
                <p class="date"><%= blog.created.toDateString() %></p>
              </div>
              <div class="article__content">
                <p class="para">
                  <a href="/blogs/<%= blog.id %>"><%- blog.body.substring(0, 500) %>...</a>
                </p>
              </div>
              <div class="article__img-box">
                <a href="/blogs/<%= blog.id %>"><img src="<%= blog.image %>" alt="article-img" class="article__img" /></a>
              </div>
            </div>
            <!-- article -->
            <hr class="mb-sm" />
            <% } %>
            <% j++; }) %>
          </section>
        </div>



<% include ../partials/right-sidebar %>