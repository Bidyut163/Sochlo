<html>
    <head>
        <title>Sochlo.in</title>
        <link  rel="stylesheet" type="text/css" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
        <link  rel="stylesheet" type="text/css" href="/stylesheets/app.css">
    </head>
    <body>
        <div class="navbar navbar-inverse">
            <div class="container">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
    			        <span class="sr-only">Toggle navigation</span>
    			        <span class="icon-bar"></span>
    			        <span class="icon-bar"></span>
    			        <span class="icon-bar"></span>
    			     </button>
                    <a class="navbar-brand" href="/">sochlo.in</a>
                </div>
                <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                    <ul class="nav navbar-nav">
                        <li class="active"><a href="/blogs">Home <span class="sr-only">(current)</span></a></li>
                    </ul>
                    <ul class="nav navbar-nav navbar-right">
                        <% if(currentUser && currentUser.isAdmin){ %>
                            <li><a href="/blogs/new">New Post</a></li>
                        <% } %>
                        <% if(!currentUser){ %>
                            <li><a href="/login">Log In</a></li>
                            <li><a href="/register">Sign Up</a></li>
                        <% }else{ %>
                            <li><a href="/user/<%= currentUser._id %>"><%= currentUser.username %></a></li>
                            <li><a href="/logout">Logout</a></li>
                        <% } %>
                    </ul>
                </div>
            </div>
        </div>
        
        <div class="container">
            <% if(error && error.length > 0){ %>
               <div class="alert alert-danger" role="alert">
                    <%= error %>
                </div>  
            <% } %>
            <% if(success && success.length > 0){ %>
                <div class="alert alert-success" role="alert">
                    <%= success %>
                </div>
            <% } %>
        </div>