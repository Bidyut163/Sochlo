<% include ../partials/header %>
<div class="container">
    <h1 class="header">New Article</h1>
    <div class="form_style">
        <form action="/blogs/<%= blog._id %>?_method=PUT" method="POST">
            <div class="form-group">
                <label class="label_style">Title:</label>
                <input class="form-control input_style" type="text" name="blog[title]" value="<%= blog.title %>">
            </div>
            <div class="form-group">
                <label class="label_style">Blog Content:</label>
                <textarea rows="15" class="form-control input_style" name="blog[body]"><%= blog.body %></textarea>
            </div>
            <input class="submit_button" type="submit">
        </form>
    </div>
</div>
<% include ../partials/footer %>
