<% include ./partials/header %>
<div class="container">
    <h1 style="text-align:center;">New Article</h1>
    <div style="width:50%; margin:25px auto;">
        <form action="/blogs/<%= blog._id %>?_method=PUT" method="POST">
            <div class="form-group">
                <label>Title</label>
                <input class="form-control" type="text" name="blog[title]" value="<%= blog.title %>">
            </div>
            <div class="form-group">
                <label>Image</label>
                <input class="form-control" type="text" name="blog[image]" value="<%= blog.image %>">
            </div>
            <div class="form-group">
                <label>Blog Content</label>
                <textarea rows="15" class="form-control" name="blog[body]"><%= blog.body %></textarea>
            </div>
            <input class="btn btn-lg btn-primary" type="submit">
        </form>
    </div>
</div>
<% include ./partials/footer %>
